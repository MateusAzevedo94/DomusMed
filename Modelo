  <script>
    // Seleciona os elementos h0, h1 e h2
    const headers = document.querySelectorAll("h0, h1, h2");
    const lista = document.getElementById("lista-sumario");

    headers.forEach((header, index) => {
      // cria id √∫nico se n√£o tiver
      if (!header.id) {
        header.id = "titulo-" + index;
      }

      // cria item de lista com link
      const li = document.createElement("li");
      const a = document.createElement("a");
      a.href = "#" + header.id;
      a.textContent = header.textContent;

      // estilo hier√°rquico no sum√°rio
      if (header.tagName === "H2") {
        li.style.marginLeft = "20px";
      }
      if (header.tagName === "H3") {
        li.style.marginLeft = "40px";
      }

      li.appendChild(a);
      lista.appendChild(li);
    });
  </script>


